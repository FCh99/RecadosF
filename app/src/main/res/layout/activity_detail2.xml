<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.faustocheca.recadosf.DetailActivity">

    <TextView
        android:id="@+id/tv_fecha_horaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="#111111"
        android:paddingLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_nombre_clienteB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>



    <TextView
        android:id="@+id/tv_telefonoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/tv_direcc_recogidaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/tv_direcc_entregaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_descripcionB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_fecha_hora_maximaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"/>




</LinearLayout>
